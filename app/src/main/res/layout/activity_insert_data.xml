<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 1" />

    <EditText
        android:id="@+id/et_field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 2" />

    <EditText
        android:id="@+id/et_field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 3" />

    <EditText
        android:id="@+id/et_field4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 4" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envia declaraciÃ³" />

</LinearLayout>
